<main class="register">
  <!-- Register Page (Only for Guest users) -->
  <section id="register">
    <div class="form">
      <h2>Register</h2>
      {{#if error}}
        <div class="errorContainer">
          <p>{{error}}</p>
        </div>
      {{/if}}
      <form class="login-form" method="POST" action="/users/register">
        <input
          type="text"
          name="email"
          id="register-email"
          placeholder="email"
          value="{{user.email}}"
        />
        <input
          type="password"
          name="password"
          id="register-password"
          placeholder="password"
        />
        <input
          type="password"
          name="repeatPassword"
          id="repeat-password"
          placeholder="repeat password"
        />
        <button type="submit">Register</button>
        <p class="message">Already registered?
          <a href="/users/login">Login</a></p>
      </form>
    </div>
  </section>
</main>