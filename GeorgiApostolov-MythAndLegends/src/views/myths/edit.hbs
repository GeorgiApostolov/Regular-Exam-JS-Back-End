{{setTitle "Edit Page"}}
<main class="edit">
  <!-- Edit Page (Only for logged-in users) -->
  <section id="edit">
    <div class="form">
      <h2>Edit Myth or Legend</h2>

      {{#if error}}
        <div class="errorContainer">
          <p>{{error}}</p>
        </div>
      {{/if}}

      <form class="edit-form" method="post" action="/myths/edit/{{myth._id}}">
        <input
          type="text"
          id="name"
          placeholder="Name"
          name="name"
          value="{{myth.name}}"
        />
        <input
          type="text"
          id="origin"
          placeholder="Origin (e.g. Greek, Norse, Egyptian)"
          name="origin"
          value="{{myth.origin}}"
        />
        <input
          type="text"
          id="role"
          placeholder="Role"
          name="role"
          value="{{myth.role}}"
        />
        <input
          type="text"
          id="myth-img"
          placeholder="Image URL"
          name="image"
          value="{{myth.image}}"
        />
        <input
          type="text"
          id="symbol"
          placeholder="Symbol / Attribute"
          name="symbol"
          value="{{myth.symbol}}"
        />
        <input
          type="text"
          id="era"
          placeholder="Era or Period"
          name="era"
          value="{{myth.era}}"
        />
        <textarea
          id="description"
          placeholder="Description..."
          name="description"
        >{{myth.description}}</textarea>
        <button type="submit">Edit</button>
      </form>

    </div>
  </section>
</main>